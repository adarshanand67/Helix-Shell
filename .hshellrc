# HelixShell Configuration File (.hshellrc)
# This file configures the appearance and behavior of HelixShell (hsh)
# Place this file in your home directory (~/.hshellrc) for user-specific settings
# or in the current directory for project-specific settings

# ------------------------------------------------------------------------------
# COLOR SCHEME CONFIGURATION
# Define colors using ANSI escape sequences or named colors
# ------------------------------------------------------------------------------

# Status indicator colors (✓ for success, ✗ for error)
[colors.status]
success = "\033[32m"      # Green for ✓
error = "\033[31m"        # Red for ✗
reset = "\033[0m"

# Primary UI elements
[colors.primary]
bold = "\033[1m"          # Bold text
reset = "\033[0m"

# Prompt text colors
[colors.prompt]
user_host = "\033[96m"    # Bright cyan for user@hostname
directory = "\033[94m"    # Bright blue for current directory
reset = "\033[0m"

# Git integration colors
[colors.git]
prefix = "\033[90m"       # Bright black for "on"
symbol = "\033[95m"       # Bright magenta for ± symbol
branch = "\033[33m"       # Yellow for branch name
reset = "\033[0m"

# Shell prompt symbol
[colors.shell]
prompt_symbol = "\033[92m" # Bright green for ❯
reset = "\033[0m"

# ------------------------------------------------------------------------------
# PROMPT FORMAT CONFIGURATION
# Define how the prompt appears and behaves
# Variables: {status} {user} {hostname} {cwd} {git} {jobs}
# ------------------------------------------------------------------------------

[prompt]
# Main prompt format (shown before each command)
# Default: "{status} {user}@{hostname}:{cwd}{git}\n{arrow} "
format = "{status} {user}@{hostname}:{cwd}{git}\n{arrow} "

# How to shorten long directory paths (keep first/last parts)
[prompt.path_shortening]
enabled = true
max_length = 40
separator = "..."

# Git branch display settings
[prompt.git]
enabled = true
prefix = " on "          # Text before branch info
symbol = "±"           # Git symbol
detached_head_length = 7 # Length of commit hash to show when detached

