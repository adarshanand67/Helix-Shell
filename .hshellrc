# ------------------------------------------------------------------------------
# BEHAVIOR CONFIGURATION
# Misc settings
# ------------------------------------------------------------------------------

[behavior]
# History
history.enabled = true
history.max_size = 1000

# Auto-completion
completion.enabled = true
completion.show_all_on_tab = true

# Job control
jobs.show_notifications = true

